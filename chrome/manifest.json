{
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": true
    },
    "browser_action": {
        "default_title": "Purple AdBlock",
        "default_icon": {
            "128": "images/128-icon.png"
        },
        "default_popup": "common/html/popup.html"
    },
    "icons": {
        "128": "images/128-icon.png"
    },
    "description": "Purple AdBlock",
    "manifest_version": 2,
    "name" : "Purple AdBlock",
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "https://*.twitch.tv/*",
        "https://usher.ttvnw.net/*",
        "https://much.ga/*",
        "tabs",
        "storage"
    ],
    "version" : "1.1"
}