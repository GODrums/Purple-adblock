{
  "name": "purple-adblock",
  "version": "2.2.0",
  "description": "An adblocker for the \"purple website\" using server side signature.",
  "scripts": {
    "preinstall": "node cli/preinstall.js",
    "server:build": "cd server && npm run build",
    "server:start": "cd server && npm run start",
    "server:dev": "cd server && npm run dev",
    "worker:dev": "cd purpleServiceWorker && npm run build:dev",
    "worker:prod": "cd purpleServiceWorker && npm run build:prod",
    "lint-staged": "lint-staged",
    "lint": "eslint --ext .js,.ts && prettier --write **/*.{js,ts,css,html} --ignore-path .gitignore"
  },
  "repository": "https://github.com/arthurbolsoni/Purple-adblock.git",
  "author": "arthurbolsoni",
  "license": "GPLv3",
  "bugs": {
    "url": "https://github.com/arthurbolsoni/Purple-adblock/issues"
  },
  "homepage": "https://github.com/arthurbolsoni/Purple-adblock#readme",
  "pre-commit": [
    "pre-commit"
  ],
  "lint-staged": {
    "*.{ts,js,html,css}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.9.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4",
    "webpack": "^5.67.0",
    "webpack-dev-server": "^4.7.4",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "copyfiles": "^2.4.1",
    "express-rate-limit": "^6.1.0",
    "html-webpack-plugin": "^5.5.0",
    "lint-staged": "^12.2.2",
    "webpack-cli": "^4.9.2"
  }
}
