{
  "name": "purple-adblock",
  "version": "2.5.0",
  "description": "An adblocker for the Twitch.tv using server side signature and local m3u8 manipulation",
  "scripts": {
    "preinstall": "node cli/preinstall.js",
    "worker:dev": "npm run worker:dev --prefix serviceWorker && concurrently \"npm run chrome:build && npm run firefox:build\" \"npm run userscript:build\"",
    "worker:build": "npm run worker:prod --prefix serviceWorker && concurrently \"npm run chrome:build && npm run firefox:build\" \"npm run userscript:build\"",
    "chrome:build": "node cli/chrome_builder.js",
    "firefox:build": "node cli/firefox_builder.js",
    "userscript:build": "node tampermonkey/build.js",
    "lint-staged": "lint-staged",
    "lint": "eslint --ext .js,.ts && prettier --write **/*.{js,ts,css,html} --ignore-path .gitignore"
  },
  "repository": "https://github.com/arthurbolsoni/Purple-adblock.git",
  "author": "kingarthur",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/arthurbolsoni/Purple-adblock/issues"
  },
  "homepage": "https://github.com/arthurbolsoni/Purple-adblock#readme",
  "pre-commit": [
    "pre-commit"
  ],
  "lint-staged": {
    "*.{ts,js,html,css}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "archiver": "^5.3.1",
    "concurrently": "^7.4.0",
    "eslint": "^7.9.0",
    "html-webpack-plugin": "^5.5.0",
    "lint-staged": "^12.2.2",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4",
    "ts-loader": "^9.4.1"
  }
}
